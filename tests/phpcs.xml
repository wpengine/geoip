<?xml version="1.0"?>
<ruleset name="WP Engine GeoTarget" namespace="WPEngine\GeoIp\Standard">
    <!-- Check WP Standards -->
    <config name="installed_paths" value="/var/www/.composer/vendor/wp-coding-standards/wpcs,/var/www/.composer/vendor/wimg/php-compatibility" />
    <rule ref="WordPress-Docs"/>
    <rule ref="WordPress-Extra"/>

    <!-- Show sniff codes in all reports -->
	<arg value="s"/>
	<!-- Up the Memory limit for large plugins -->
	<ini name="memory_limit" value="128M"/>
    
    <!-- Really Important Sniffs -->
	<rule ref="WordPress.Security.EscapeOutput">
		<severity>10</severity>
	</rule>
	<rule ref="WordPress.Security.NonceVerification">
		<severity>10</severity>
	</rule>
	<rule ref="WordPress.DB.PreparedSQL">
		<severity>10</severity>
	</rule>

    <!-- Check PHP version compatibility for 5.6 and higher -->
    <config name="testVersion" value="5.6-"/>
    <rule ref="PHPCompatibility"/>
</ruleset>
